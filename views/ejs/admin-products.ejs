<h1>Admin - Product Management</h1>
<a href="/admin/add">Add New Product</a>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Actions</th>
  </tr>
  <% products.forEach(product => { %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td>
        <a href="/admin/edit/<%= product.id %>">Edit</a>
      </td>
    </tr>
  <% }) %>
</table>
